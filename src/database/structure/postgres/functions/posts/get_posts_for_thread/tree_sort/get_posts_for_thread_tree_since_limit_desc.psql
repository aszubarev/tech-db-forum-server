CREATE OR REPLACE FUNCTION get_posts_for_thread_tree_since_limit_desc(
  p_thread_id INT,
  p_since INT,
  p_limit INT,
  p_desc_flag BOOLEAN)

RETURNS TABLE(id INT,
              thread INT,
              forum CITEXT,
              author CITEXT,
              parent INT,
              message TEXT,
              created TIMESTAMP WITH TIME ZONE,
              isEdited BOOLEAN)
AS
$BODY$
BEGIN

    RETURN QUERY
    SELECT p.post_id, p.thread_id, p.forum_slug, p.user_nickname,
           p.parent_id, p.message, p.created, p.is_edited
    FROM posts p
    WHERE p.thread_id = p_thread_id AND CASE p_desc_flag
      
                                            WHEN false THEN p.path > (
                                                                      SELECT p_sub.path
                                                                      FROM posts p_sub
                                                                      WHERE p_sub.post_id = p_since
                                                                     )
                                            WHEN true  THEN p.path < (
                                                                      SELECT p_sub.path
                                                                      FROM posts p_sub
                                                                      WHERE p_sub.post_id = p_since
                                                                     )
                                        END
    ORDER BY CASE p_desc_flag
                WHEN false THEN p.path
                ELSE NULL
             END ASC,

             CASE p_desc_flag
                WHEN true THEN  p.path
                ELSE NULL
             END DESC
    LIMIT p_limit;

END;
$BODY$
LANGUAGE plpgsql VOLATILE;